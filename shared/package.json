{
  "name": "@pinkytrust/shared",
  "version": "1.0.0",
  "description": "Shared resources for PinkyTrust platform applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "components/**/*",
    "lib/**/*",
    "types/**/*",
    "utils/**/*"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./components": {
      "import": "./dist/components/index.js",
      "require": "./dist/components/index.js",
      "types": "./dist/components/index.d.ts"
    },
    "./lib": {
      "import": "./dist/lib/index.js",
      "require": "./dist/lib/index.js",
      "types": "./dist/lib/index.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.js",
      "require": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./utils": {
      "import": "./dist/utils/index.js",
      "require": "./dist/utils/index.js",
      "types": "./dist/utils/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc --noEmit false --declaration true --outDir dist",
    "build:components": "cp -r components dist/ && cp -r lib dist/ && cp -r utils dist/",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "postinstall": "ln -sf ../../node_modules/react node_modules/react && ln -sf ../../node_modules/react-dom node_modules/react-dom"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.18",
    "@supabase/supabase-js": "^2.39.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.5",
    "lucide-react": "^0.525.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "typescript": "^5.3.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "next": "^14.0.0"
  }
} 